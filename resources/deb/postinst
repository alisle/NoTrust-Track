#!/bin/sh
# postinst script for zerotrust-track
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
  configure)


    adduser --system zerotrust
    addgroup --system zerotrust
    sudo usermod -a -G zerotrust zerotrust
    chown zerotrust:zerotrust /usr/sbin/zerotrust-track
    chown zerotrust:zerotrust -R /usr/share/zerotrust

    # For this to work we need to have the CAP_NET_ADMIN and CAP_DAC_READ_SEARCH, CAP_SYS_PTRACE
    setcap 'cap_sys_ptrace,cap_net_admin,cap_dac_read_search=+ep' /usr/sbin/zerotrust-track

    # Add ip_conntrack to the modules list
    echo "ip_conntrack" >> /etc/modules

    # set up the systemd service.
    if [ ! -L /etc/systemd/system/zerotrust-track.service ]; then
      systemctl link /usr/share/zerotrust/systemd/zerotrust-track.service
      systemctl enable zerotrust-track.service
      systemctl start  zerotrust-track.service
    else
      systemctl daemon-reload
    fi

    if [ ! -d "/usr/share/zerotrust" ]; then
      chown -R zerotrust:zerotrust /usr/share/zerotrust
    fi
  ;;

  abort-upgrade|abort-remove|abort-deconfigure)
    exit 0
  ;;

  *)
    echo "postinst called with unknown argument \`$1'" >&2
    exit 1
  ;;

esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
